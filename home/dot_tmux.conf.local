# List of plugins
set -g @tpm_plugins '          \
    tmux-plugins/tpm \
    tmux-plugins/tmux-sensible \
    nhdaly/tmux-better-mouse-mode \
    tmux-plugins/tmux-yank \
'

set -g history-limit 10000
set-option -s set-clipboard off

# set-clipboard on
set-option -g mouse on

# bind-key -T copy-mode C-@ send-keys -X begin-selection
# bind-key -T copy-mode C-m send-keys -X begin-selection
set-option -g status off

# split current window horizontally
# bind-key -T prefix % split-window -v -c "#{pane_current_path}" "zsh"
bind-key -T prefix % split-window -v "zsh"
# split current window vertically
# bind-key -T prefix '"' split-window -h -c "#{pane_current_path}" "zsh"
bind-key -T prefix '"' split-window -h "zsh"

