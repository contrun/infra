ignore = Name Desktop.ini
ignore = Name desktop.ini
ignore = Name .DocumentRevisions-V100
ignore = Name .fseventsd
ignore = Name .Spotlight-V100
ignore = Name .TemporaryItems
ignore = Name .Trashes
ignore = Name .VolumeIcon.icns
ignore = Name .com.apple.timemachine.donotpresent

# Large files
ignore = Regex .*/.*\.gguf
ignore = Regex .*/.*\.avd

# Programming languages build artifacts files
ignore = Regex .*/__debug_bin.*

# Programming languages build artifacts directories
ignore = Regex .*/result
ignore = Regex .*/result-[0-9]+
